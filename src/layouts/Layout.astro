---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="La mejor cerveza artesanal en Venezuela." />
		<meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <link rel='stylesheet' href="https://cdn-uicons.flaticon.com/2.2.0/uicons-brands/css/uicons-brands.css">
    <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/2.2.0/uicons-regular-straight/css/uicons-regular-straight.css'>
    <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/2.2.0/uicons-regular-rounded/css/uicons-regular-rounded.css'>
	</head>
	<body>
    <div class="w-full flex justify-center bg-neutral-800/70">
	    <slot />
    </div>
    <style>
    body {
      background-image: url("/bg.jpg");
      background-position: center;
      background-size: cover;
      background-attachment: fixed;
      background-repeat: no-repeat;
    }
    </style>
	</body>
</html>

