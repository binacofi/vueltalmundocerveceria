---
import Layout from "../layouts/Layout.astro"
import Top from "../components/top.astro"
import {Image} from "astro:assets"
import RedAlePic from "../assets/red_irish_ale.jpeg"
---

<Layout title="tienda">
  <div class="w-full max-w-3xl backdrop-blur-sm text-gray-50">
  <Top/>
	<main class="w-full flex justify-center w-full flex-col gap-8 p-10">
    <div class="w-full flex justify-center w-full flex-col gap-2">
      <p class="w-full text-center text-xl font-medium">CONOCE NUESTRAS CERVEZAS</p>
      <p class="w-full text-center text-base">A un par de clicks de distancia</p>
    </div>
    <ul class="flex items-center flex-col sm:flex-row sm:flex-wrap justify-center w-full gap-8 mt-5 sm:py-10 py-5">
      <li class="w-full flex justify-center sm:w-1/3 sm:hover:w-2/5 duration-200 transition-all">
        <a href="#">

        <div class="w-full flex flex-col shadow-lg">
          <div>
            <Image alt="cerveza" class="w-full" src={RedAlePic} ></Image>
          </div>
          <div class="bg-amber-500 text-black p-4 flex flex-col gap-1">
            <span class="font-medium text-xl">Read Irish Ale</span> 
            <span class="text-neutro-700">3.5 usd</span>
          </div>
        </div>

        </a>
      </li>

      <li class="w-full flex justify-center sm:w-1/3 sm:hover:w-2/5 duration-200 transition-all">
        <a href="#">

        <div class="w-full flex flex-col shadow-lg">
          <div>
            <Image alt="cerveza" class="w-full" src={RedAlePic} ></Image>
          </div>
          <div class="bg-amber-500 text-black p-4 flex flex-col gap-1">
            <span class="font-medium text-xl">Read Irish Ale</span> 
            <span class="text-neutro-700">3.5 usd</span>
          </div>
        </div>

        </a>
      </li>
    </ul>
	</main>
  </div>
</Layout>
